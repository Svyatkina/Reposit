def writer():
    """ Запись в файл """
    task = '* {}.{}.{} в {}:{} выполнить:{} \n '.format(a.get(),b.get(),c.get(),d.get(),e.get(),w.get())
    
    with open('taskу.txt','a') as f:
        print(task)
        f.writelines(task)


