alarm_HH = tkinter.IntVar()
tkinter.Entry(root,textvariable = alarm_HH).grid(row = 9,column = 0)
alarm_MM = tkinter.IntVar()
tkinter.Entry(root, textvariable = alarm_MM).grid(row = 9,column = 1)
alarm_MD = tkinter.IntVar()
tkinter.Entry(root, textvariable = alarm_MD).grid(row = 9,column = 2)
alarm_MO = tkinter.IntVar()
tkinter.Entry(root, textvariable = alarm_MO).grid(row = 9,column = 3)
alarm_YY = tkinter.IntVar()
tkinter.Entry(root, textvariable = alarm_YY).grid(row = 9,column = 4)
def alarms():
    """ Создание объекта класса и запуск функции run() """
    alarm = Alarm(alarm_HH.get(), alarm_MM.get(), alarm_MD.get(), alarm_MO.get(), alarm_YY.get(),text.get())
    alarm.start()
        
button66 = tkinter.Button(root,text = 'Установить напоминание', command = alarms,bg="white",fg="blue").grid(row =12,column = 2)

root.mainloop()
